        <GridPane.margin>
            <Insets left="70.0"/>
        </GridPane.margin>
    </ColorPicker>
    <ColorPicker fx:id="messageColorPicker" GridPane.columnIndex="1" GridPane.rowIndex="4">
        <GridPane.margin>
            <Insets left="70.0"/>
        </GridPane.margin>
    </ColorPicker>
    <ColorPicker fx:id="directMessageColorPicker" GridPane.columnIndex="1" GridPane.rowIndex="5">
        <GridPane.margin>
            <Insets left="70.0"/>
        </GridPane.margin>
    </ColorPicker>
</GridPane>