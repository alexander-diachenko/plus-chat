<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.ColorPicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="settingsRoot" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.121"
      xmlns:fx="http://javafx.com/fxml/1" fx:controller="chat.controller.SettingController">
    <Pane maxHeight="35.0" minHeight="35.0" prefHeight="35.0"/>
    <TabPane fx:id="settingsTab" tabClosingPolicy="UNAVAILABLE">
        <Tab text="%settings.tab.general">
            <GridPane gridLinesVisible="true" prefHeight="365.0" prefWidth="600.0">
                <columnConstraints>
                    <ColumnConstraints hgrow="ALWAYS" minWidth="10.0" prefWidth="100.0"/>
                    <ColumnConstraints hgrow="ALWAYS" minWidth="10.0" prefWidth="100.0"/>
                </columnConstraints>
                <rowConstraints>
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="ALWAYS"/>
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="ALWAYS"/>
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="ALWAYS"/>
                </rowConstraints>
                <opaqueInsets>
                    <Insets bottom="50.0" left="50.0" right="50.0" top="50.0"/>
                </opaqueInsets>
                <Label contentDisplay="CENTER" prefHeight="15.0" prefWidth="97.0" text="%language"
                       GridPane.halignment="LEFT" GridPane.valignment="CENTER">
                    <GridPane.margin>
                        <Insets left="100.0"/>
                    </GridPane.margin>
                </Label>
                <Label text="%theme" GridPane.rowIndex="1">
                    <GridPane.margin>
                        <Insets left="100.0"/>
                    </GridPane.margin>
                </Label>
                <Label text="%transparency" GridPane.rowIndex="2">
                    <GridPane.margin>
                        <Insets left="100.0"/>
                    </GridPane.margin>
                </Label>
                <ChoiceBox fx:id="languageChoiceBox" prefWidth="150.0" GridPane.columnIndex="1">
                    <GridPane.margin>
                        <Insets left="70.0"/>
                    </GridPane.margin>
                </ChoiceBox>
                <ChoiceBox fx:id="themeChoiceBox" prefWidth="150.0" GridPane.columnIndex="1" GridPane.rowIndex="1">
                    <GridPane.margin>
                        <Insets left="70.0"/>
                    </GridPane.margin>
                </ChoiceBox>
                <HBox alignment="CENTER_LEFT" GridPane.columnIndex="1" GridPane.rowIndex="2">
                    <Slider fx:id="transparencySlider" GridPane.columnIndex="1" GridPane.rowIndex="2">
                    </Slider>
                    <Label fx:id="transparencyValue"/>
                    <GridPane.margin>
                        <Insets left="70.0"/>
                    </GridPane.margin>
                </HBox>
                <Label text="%randomizer" GridPane.rowIndex="3">
                    <GridPane.margin>
                        <Insets left="100.0"/>
                    </GridPane.margin>
                </Label>
                <Button fx:id="random" mnemonicParsing="false" onAction="#randomAction"
                        GridPane.columnIndex="1" GridPane.rowIndex="3">
                    <HBox.margin>
                        <Insets right="50.0"/>
                    </HBox.margin>
                </Button>
            </GridPane>
        </Tab>
        <Tab text="%settings.tab.font">
            <GridPane gridLinesVisible="true" prefHeight="365.0" prefWidth="600.0">
                <columnConstraints>
                    <ColumnConstraints hgrow="ALWAYS" minWidth="10.0" prefWidth="100.0"/>
                    <ColumnConstraints hgrow="ALWAYS" minWidth="10.0" prefWidth="100.0"/>
                </columnConstraints>
                <rowConstraints>
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="ALWAYS"/>
                </rowConstraints>
                <opaqueInsets>
                    <Insets bottom="50.0" left="50.0" right="50.0" top="50.0"/>
                </opaqueInsets>
                <Label text="%font-size">
                    <GridPane.margin>
                        <Insets left="100.0"/>
                    </GridPane.margin>
                </Label>
                <HBox alignment="CENTER_LEFT" GridPane.columnIndex="1">
                    <Slider fx:id="fontSizeSlider">
                    </Slider>
                    <Label fx:id="fontSize"/>
                    <GridPane.margin>
                        <Insets left="70.0"/>
                    </GridPane.margin>
                </HBox>
            </GridPane>
        </Tab>
        <Tab text="%settings.tab.color">
            <GridPane gridLinesVisible="true" prefHeight="365.0" prefWidth="600.0">
                <columnConstraints>
                    <ColumnConstraints hgrow="ALWAYS" minWidth="10.0" prefWidth="100.0"/>
                    <ColumnConstraints hgrow="ALWAYS" minWidth="10.0" prefWidth="100.0"/>
                </columnConstraints>
                <rowConstraints>
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="ALWAYS"/>
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="ALWAYS"/>
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="ALWAYS"/>
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="ALWAYS"/>
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="ALWAYS"/>
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="ALWAYS"/>
                </rowConstraints>
                <opaqueInsets>
                    <Insets bottom="50.0" left="50.0" right="50.0" top="50.0"/>
                </opaqueInsets>
                <Label text="%nick-color" GridPane.rowIndex="2">
                    <GridPane.margin>
                        <Insets left="100.0"/>
                    </GridPane.margin>
                </Label>
                <Label text="%separator-color" GridPane.rowIndex="3">
                    <GridPane.margin>
                        <Insets left="100.0"/>
                    </GridPane.margin>
                </Label>
                <Label text="%message-color" GridPane.rowIndex="4">
                    <GridPane.margin>
                        <Insets left="100.0"/>
                    </GridPane.margin>
                </Label>
                <Label text="%direct-message-color" GridPane.rowIndex="5">
                    <GridPane.margin>
                        <Insets left="100.0"/>
                    </GridPane.margin>
                </Label>
                <Label text="%base-color" GridPane.rowIndex="0">
                    <GridPane.margin>
                        <Insets left="100.0"/>
                    </GridPane.margin>
                </Label>
                <Label text="%background-color" GridPane.rowIndex="1">
                    <GridPane.margin>
                        <Insets left="100.0"/>
                    </GridPane.margin>
                </Label>
                <ColorPicker fx:id="baseColorPicker" GridPane.columnIndex="1" GridPane.rowIndex="0">
                    <GridPane.margin>
                        <Insets left="70.0"/>
                    </GridPane.margin>
                </ColorPicker>
                <ColorPicker fx:id="backgroundColorPicker" GridPane.columnIndex="1" GridPane.rowIndex="1">
                    <GridPane.margin>
                        <Insets left="70.0"/>
                    </GridPane.margin>
                </ColorPicker>
                <ColorPicker fx:id="nickColorPicker" GridPane.columnIndex="1" GridPane.rowIndex="2">
                    <GridPane.margin>
                        <Insets left="70.0"/>
                    </GridPane.margin>
                </ColorPicker>
                <ColorPicker fx:id="separatorColorPicker" GridPane.columnIndex="1" GridPane.rowIndex="3">
                    <GridPane.margin>
                        <Insets left="70.0"/>
                    </GridPane.margin>
                </ColorPicker>
                <ColorPicker fx:id="messageColorPicker" GridPane.columnIndex="1" GridPane.rowIndex="4">
                    <GridPane.margin>
                        <Insets left="70.0"/>
                    </GridPane.margin>
                </ColorPicker>
                <ColorPicker fx:id="directMessageColorPicker" GridPane.columnIndex="1" GridPane.rowIndex="5">
                    <GridPane.margin>
                        <Insets left="70.0"/>
                    </GridPane.margin>
                </ColorPicker>
            </GridPane>
        </Tab>
        <Tab text="%settings.tab.sound">
            <GridPane gridLinesVisible="true" prefHeight="365.0" prefWidth="600.0">
                <columnConstraints>
                    <ColumnConstraints hgrow="ALWAYS" minWidth="10.0" prefWidth="100.0"/>
                    <ColumnConstraints hgrow="ALWAYS" minWidth="10.0" prefWidth="100.0"/>
                </columnConstraints>
                <rowConstraints>
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="ALWAYS"/>
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="ALWAYS"/>
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="ALWAYS"/>
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="ALWAYS"/>
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="ALWAYS"/>
                </rowConstraints>
                <opaqueInsets>
                    <Insets bottom="50.0" left="50.0" right="50.0" top="50.0"/>
                </opaqueInsets>
                <Label text="%enable-sound">
                    <GridPane.margin>
                        <Insets left="100.0"/>
                    </GridPane.margin>
                </Label>
                <CheckBox fx:id="enableSoundCheckBox" mnemonicParsing="false" GridPane.columnIndex="1">
                    <GridPane.margin>
                        <Insets left="135.0"/>
                    </GridPane.margin>
                </CheckBox>
                <Label text="%message-sound" GridPane.rowIndex="1">
                    <GridPane.margin>
                        <Insets left="100.0"/>
                    </GridPane.margin>
                </Label>
                <Label text="%message-sound-volume" GridPane.rowIndex="2">
                    <GridPane.margin>
                        <Insets left="100.0"/>
                    </GridPane.margin>
                </Label>
                <Label text="%direct-message-sound" GridPane.rowIndex="3">
                    <GridPane.margin>
                        <Insets left="100.0"/>
                    </GridPane.margin>
                </Label>
                <Label text="%direct-message-sound-volume" GridPane.rowIndex="4">
                    <GridPane.margin>
                        <Insets left="100.0"/>
                    </GridPane.margin>
                </Label>
                <ChoiceBox fx:id="messageSoundChoiceBox" prefWidth="150.0" GridPane.columnIndex="1"
                           GridPane.rowIndex="1">
                    <GridPane.margin>
                        <Insets left="70.0"/>
                    </GridPane.margin>
                </ChoiceBox>
                <HBox alignment="CENTER_LEFT" GridPane.columnIndex="1" GridPane.rowIndex="2">
                    <Slider fx:id="messageVolumeSlider"/>
                    <Label fx:id="messageVolumeValue"/>
                    <GridPane.margin>
                        <Insets left="70.0"/>
                    </GridPane.margin>
                </HBox>
                <ChoiceBox fx:id="directMessageSoundChoiceBox" prefWidth="150.0" GridPane.columnIndex="1"
                           GridPane.rowIndex="3">
                    <GridPane.margin>
                        <Insets left="70.0"/>
                    </GridPane.margin>
                </ChoiceBox>
                <HBox alignment="CENTER_LEFT" GridPane.columnIndex="1" GridPane.rowIndex="4">
                    <Slider fx:id="directMessageVolumeSlider"/>
                    <Label fx:id="directMessageVolumeValue"/>
                    <GridPane.margin>
                        <Insets left="70.0"/>
                    </GridPane.margin>
                </HBox>
            </GridPane>
        </Tab>
        <Tab text="%settings.tab.data">
            <GridPane gridLinesVisible="true" prefHeight="365.0" prefWidth="600.0">
                <columnConstraints>
                    <ColumnConstraints hgrow="ALWAYS" minWidth="10.0" prefWidth="100.0"/>
                    <ColumnConstraints hgrow="ALWAYS" minWidth="10.0" prefWidth="100.0"/>
                </columnConstraints>
                <rowConstraints>
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="ALWAYS"/>
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="ALWAYS"/>
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="ALWAYS"/>
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="ALWAYS"/>
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="ALWAYS"/>
                </rowConstraints>
                <opaqueInsets>
                    <Insets bottom="50.0" left="50.0" right="50.0" top="50.0"/>
                </opaqueInsets>
                <Label text="%data.commands">
                    <GridPane.margin>
                        <Insets left="100.0"/>
                    </GridPane.margin>
                </Label>
                <Label text="%data.users" GridPane.rowIndex="1">
                    <GridPane.margin>
                        <Insets left="100.0"/>
                    </GridPane.margin>
                </Label>
                <Label text="%data.ranks" GridPane.rowIndex="2">
                    <GridPane.margin>
                        <Insets left="100.0"/>
                    </GridPane.margin>
                </Label>
                <Label text="%data.smiles" GridPane.rowIndex="3">
                    <GridPane.margin>
                        <Insets left="100.0"/>
                    </GridPane.margin>
                </Label>
                <Label text="%data.directs" GridPane.rowIndex="4">
                    <GridPane.margin>
                        <Insets left="100.0"/>
                    </GridPane.margin>
                </Label>
                <Button fx:id="commandsData" onAction="#commandsDataAction" GridPane.columnIndex="1"
                        GridPane.halignment="CENTER" GridPane.rowIndex="0"/>
                <Button fx:id="usersData" onAction="#usersDataAction" GridPane.columnIndex="1"
                        GridPane.halignment="CENTER" GridPane.rowIndex="1"/>
                <Button fx:id="ranksData" onAction="#ranksDataAction" GridPane.columnIndex="1"
                        GridPane.halignment="CENTER" GridPane.rowIndex="2"/>
                <Button fx:id="smilesData" onAction="#smilesDataAction" GridPane.columnIndex="1"
                        GridPane.halignment="CENTER" GridPane.rowIndex="3"/>
                <Button fx:id="directsData" onAction="#directsDataAction" GridPane.columnIndex="1"
                        GridPane.halignment="CENTER" GridPane.rowIndex="4"/>
            </GridPane>
        </Tab>
    </TabPane>
    <HBox fx:id="buttons" alignment="CENTER_RIGHT" maxHeight="60.0" minHeight="60.0" prefHeight="60.0" spacing="40.0">
        <Button fx:id="reload" onAction="#reloadAction">
            <HBox.margin>
                <Insets right="300.0"/>
            </HBox.margin>
        </Button>
        <Button fx:id="confirm" mnemonicParsing="false" onAction="#confirmAction"/>
        <Button fx:id="cancel" mnemonicParsing="false" onAction="#cancelAction">
            <HBox.margin>
                <Insets right="50.0"/>
            </HBox.margin>
        </Button>
    </HBox>
</VBox>
